{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Inflation Rate in Azerbaijan in 2024",
  "title": {
    "text": "Inflation Rate in Azerbaijan in 2024",
    "subtitle": "Source: Central Bank of Azerbaijan",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "middle",
    "color": "black",
    "offset": 10
  },
  "data": {
    "url": "https://raw.githubusercontent.com/bakhtiyarms/bakhtiyarms.github.io/refs/heads/main/week_10_1_updated.csv",
    "format": {"type": "dsv", "delimiter": ";"}
  },
  "height": 300,
  "width": 400,
  "encoding": {
        "x": {"field": "Date", "type": "temporal", "title": "Month"},
        },
  "layer": [
    {
      "encoding": {
        "y": {
          "field": "Rate",
          "type": "quantitative",
          "title": "Inflation Rate"
        }
      },
      "layer": [
        {"mark": {
        "type": "line",
        "point": false,
        "interpolate": "step",
        "color": "red"
        },
        },
        {
          "transform": [{"filter": {"param": "hover", "empty": false}}],
      "mark": {"type": "circle", "size": 100, "color": "red"},
        }
      ]
    },
    {
      "mark": "rule",
      "encoding": {
        "opacity": {
          "condition": { "param": "hover", "empty": false, "value": 0.5},
          "value": 0
        },
        "tooltip": [
          {
            "field": "Date",
            "type": "temporal",
            "format": "%b-%Y",
            "title": "Date"
          },
          {
            "field": "Rate",
            "type": "quantitative",
            "format": ",.2f",
            "title": "Rate (%)"
          }
        ]
      },
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "on": "mouseover",
            "clear": "mouseout",
            "fields": ["Date"],
            "nearest": true
          }

        }
      ]
    }
  ]
}