{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Interactive line chart with point highlighting on hover.",
  "title": {
    "text": "NGOs Admitted as Observers to UNFCCC by COPs",
    "subtitle": "Source: UNFCCC and Carbon Brief",
    "subtitleColor": "darkgreen",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 15,
    "anchor": "middle",
    "fontSize": 20,
    "color": "darkgreen",
    "offset": 10
  },
  "width": 750,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/bakhtiyarms/bakhtiyarms.github.io/refs/heads/main/PP434_DP_C4.csv",
    "format": {"type": "dsv", "delimiter": ";"}
  },
  "mark": {"type": "line", "color": "green", "strokeWidth": 3},
  "encoding": {
    "opacity": {
      "condition": {"param": "hover", "empty": true, "value": 0.5},
      "value": 0
    },
    "x": {
      "field": "Name",
      "type": "ordinal",
      "axis": {
        "labelAngle": 45,
        "labelOverlap": false,
        "tickCount": 5,
        "labelPadding": 10,
        "grid": true,
        "titleColor": "darkgreen",
        "labelColor": "darkgreen",
        "labelFontSize": 15,
        "titleFontSize": 15
      },
      "sort": {"field": "COPNumber", "order": "ascending"}
    },
    "y": {
      "field": "NGOs",
      "type": "quantitative",
      "axis": {
        "titleColor": "darkgreen",
        "labelColor": "darkgreen",
        "labelFontSize": 15,
        "titleFontSize": 15
      }
      },
    "tooltip": [
      {"field": "Name", "type": "ordinal"},
      {"field": "NGOs", "type": "quantitative"}
    ]
  },
  "params": [
    {
      "name": "hover",
      "select": {
        "type": "point",
        "on": "mousover",
        "clear": "mouseout",
        "fields": ["Name"],
        "nearest": true
      }
    }
  ]
}